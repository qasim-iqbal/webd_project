<div class="form-group" style="margin-top: 3%;">
    <label for="title" style="font-size: x-large; color: black;"> Title</label>
    <input type="text" name="title" id="title" class="form-control" required value="<%= article.title %>" style="background-color: rgb(132, 243, 243); color: black;">
</div>

<div class="form-group">
    <label for="topic" style="font-size: x-large; color: black;"> topic</label>
    <textarea required type="text" name="topic" id="topic" class="form-control" style="background-color: rgb(132, 243, 243); color: black;"><%= article.topic %></textarea>  
</div>

<div class="form-group">
    <label for="content" style="font-size: x-large; color: black;"> content</label>
    <textarea required type="text" name="content" id="content" class="form-control" style="background-color: rgb(132, 243, 243); color: black;"><%= article.content %></textarea>  
</div>

<a href="/" class="btn btn-secondary" style="margin-top: 2%;">Cancel</a>
<button type="submit" class="btn btn-primary" style="margin-top: 2%;"> Save</button>
