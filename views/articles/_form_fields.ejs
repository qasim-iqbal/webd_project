<div class="form-group" style="margin-top: 3%;">
    <label for="title" style="font-size: x-large; color: black;"> Title</label>
    <input type="text" name="title" id="title" class="form-control" required value="<%= article.title %>" style="background-color: rgb(132, 243, 243); color: black;">
</div>

<div class="form-group">
    <label for="description" style="font-size: x-large; color: black;"> Description</label>
    <textarea required type="text" name="description" id="description" class="form-control" style="background-color: rgb(132, 243, 243); color: black;"><%= article.description %></textarea>  
</div>

<div class="form-group">
    <label for="markdown" style="font-size: x-large; color: black;"> Markdown</label>
    <textarea required type="text" name="markdown" id="markdown" class="form-control" style="background-color: rgb(132, 243, 243); color: black;"><%= article.markdown %></textarea>  
</div>

<a href="/" class="btn btn-secondary" style="margin-top: 2%;">Cancel</a>
<button type="submit" class="btn btn-primary" style="margin-top: 2%;"> Save</button>
